<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:stretchColumns="*"
    tools:context=".SubActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/sueflix" />


    <ImageView
        android:layout_width="132dp"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/marvel_white" />

    <TableLayout
        android:layout_width="360dp"
        android:layout_height="540dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:visibility="visible"
                android:src="@drawable/ironman_right"
                 />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:src="@drawable/captain_right" />

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:src="@drawable/civilwar_right"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:src="@drawable/drstrange_right" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:src="@drawable/guardians_right" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:src="@drawable/spiderman_right"/>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageButton
                android:id="@+id/imageButton9"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:src="@drawable/thor_right" />

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:src="@drawable/infinitywar_right" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:src="@drawable/endgame_right" />
        </TableRow>
    </TableLayout>
</LinearLayout>